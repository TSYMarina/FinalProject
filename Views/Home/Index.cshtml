@model string

@{
    ViewData["Title"] = "Home Page";
    <link rel="stylesheet" href="site.css">
}


<style>


    .header {
        text-align: center;
        font-size: 56px;
        line-height: 80px;
        margin-top: 24px;
        margin-bottom: 24px;
        padding: 2px 60px;
        font-family: Arial Black, sans-serif;
    }

    .multicolortext {
        background-image: linear-gradient(to left, navy, indigo, deepskyblue, blue, darkslateblue, dodgerblue, blueviolet);
        -webkit-background-clip: text;
        -moz-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    body {
        background: #111;
    }

    .hidden {
        opacity: 0;
    }

    .console-container {
        font-family: Khula;
        font-size: 2em;
        text-align: center;
        height: 200px;
        width: 400px;
        display: block;
        position: relative;
        color: white;
        top: auto;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
    }

    .console-underscore {
        display: inline-block;
        position: relative;
        top: 10px;
        left: 10px;
    }

    .humor {
        padding-block: 40px;
        margin-top: 150px;
    }

    body {
        background: url("images/cloud-blue-sky.jpg") no-repeat center center fixed;
        background-color: white;
    }

    .myAdvice {
        padding-top: 60px;
        border: 60px;
    }

    .vidtable {
        border-spacing: 60px;
        margin-top: 150px;
    }

</style>

<body>

    <div class="header">
        <h1 class="multicolortext">Today will be another great day of solving probelms, learning new technologies, coding. AND <strong>not stressing</strong> over any of it.</h1>
    </div>


    <div class="text-center">
        <h3 style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">@Model</h3>

        <h4 style="margin-block: 10px">
            <a class="btn-hover color-8 height:50px" asp-area="" asp-controller="Home" asp-action="Index">Get New Quote</a>
        </h4>
    </div>

    <div class="myAdvice">
        <h4> Words of wisdom from a beat up almost-alumni to come... </h4>
    </div>



    <div class="humor">
        <div class="console-container">
            <span id="text"></span><div class="console-underscore" id="console">&#95;</div>
            <h5>
                I have a good joke about programming, but it only works on my computer.
            </h5>
            <h5 class="card-title"><a target="_blank" href="https://programmerhumor.io/">Check out this webpage with Programming Jokes</a></h5>

        </div>
    </div>


    <table class="table text-center vidtable">
        <tr>
            <th><button class="btn-hover color-7"><a target="_blank" href="https://www.youtube-nocookie.com/embed/_4kHxtiuML0">Play FOCUS video in a separate window</a></button></th>
            <th><button class="btn-hover color-6"><a target="_blank" href="https://www.youtube-nocookie.com/embed/5BcMmy_YR6M">Play ENERGY FLOW video in a separate window</a></button></th>
        </tr>

        <td>
            <iframe width="400" height="235" src="https://www.youtube-nocookie.com/embed/_4kHxtiuML0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>


        </td>
        <td>
            <iframe width="400" height="235" src="https://www.youtube-nocookie.com/embed/5BcMmy_YR6M" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <br>
            <br>
            <br>
        </td>
    </table>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>



