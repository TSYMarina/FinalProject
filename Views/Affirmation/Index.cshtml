@model IEnumerable<Affirmation>

<style>
    .tbbtn {
        border-radius: 4px;
        user-select: none;
        cursor: grabbing;
        outline: none;
        background: lightblue;
        text-align: center;
        text-decoration: none;
        color: navy;
        display: inline-block;
        padding: 5px 12px;
        margin: 1px 1px;
        font-size: 15px;
        border: 1px;
        box-shadow: 1px 5px 5px #1a1a1a;
        transition: 0.25s;
    }

    .tbbtn {
        width: 50px;
    }

    crtbtn {
        border-radius: 4px;
        user-select: none;
        cursor: grabbing;
        outline: none;
        background: brown;
        text-align: center;
        text-decoration: none;
        color: lightblue;
        display: inline-block;
        padding: 5px 12px;
        margin: 1px 1px;
        font-size: 20px;
        border: 1px;
        box-shadow: 1px 5px 5px #1a1a1a;
        transition: 0.25s;
    }

    .affindexheader {
        border-radius: 4px;
        margin: 3px;
        padding-block: 10px;
        text-align: center;
        color: cadetblue;
    }


    body {
        background-image: url(/images/04.jpg);
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }

    .myInput {
        background-image: url('/css/searchicon.png'); /* Add a search icon to input */
        background-position: 10px 12px; /* Position the search icon */
        background-repeat: no-repeat; /* Do not repeat the icon image */
        width: 100%; /* Full-width */
        font-size: 16px; /* Increase font-size */
        padding: 12px 20px 12px 40px; /* Add some padding */
        border: 1px solid #ddd; /* Add a grey border */
        margin-bottom: 12px; /* Add some space below the input */
    }

    #myTable tr.header, #myTable tr:hover {
        background-color: #f1f1f1;
    }

    .label{
        margin-bottom: 25px;
        padding:15px;
        font-size: 20px;
        display:block;
    }

</style>


<header>
    <h2 class="affindexheader" style="background-image: url('/images/08.jpg');">Affirmations</h2>

</header>

<body>

    <div>
        <a class="crtbtn" href="/Affirmation/InsertAffirmation/">Create a New Affirmation</a>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-inline pull-right">
                <label class="label"">Filter</label>
                <input type="text" class="form-control" id="myInput" onkeyup="displayChosen()" placeholder="Filter by category">
            </div>
        </div>
    </div>
    <br>
    <div>
        <table id="myTable" style="padding: 30px">
            <tr>
                <th>ID</th>
                <th>An Affirmation</th>
                <th>Category</th>
            </tr>

            @foreach (var affirmation in Model)
            {
                <tr>
                    <td><a class="tbbtn" href=/Affirmation/ViewAffirmation/@affirmation.ID>@affirmation.ID</a></td>
                    <td>@affirmation.AffirmationText</td>
                    <td style="text-align:right">@affirmation.Category</td>
                </tr>

            }
        </table>
    </div>

    <script src="~/js/site.js" displayChosen()></script>
</body>
