@model Affirmation

<h4>Make changes in the text window and press Update to save.</h4>

@using (Html.BeginForm("UpdateAffirmationToDatabase", "Affirmation", "Post"))
{
    <input asp-for="ID" type="hidden" value="@Model.ID" />

    <label asp-for="AffirmationText" class="control-label">Affirmation Detail</label>

    <input type="text" affirmationText="AffirmationText" class="form-control" value="@Model.AffirmationText" />

    <input type="submit" value="Update Affirmation" class="btn btn-primary" />

}
