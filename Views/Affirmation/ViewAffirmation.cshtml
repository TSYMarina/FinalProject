@model Affirmations

@{
    ViewBag.Title = "Update Affirmation";
   <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css' >

}

<style>
    body {

        font: black;
        animation: mymove 5s infinite;
        background-image: url("../images/01.jpg");
        font-family: Poiret;
        
        /*Stoic Script, Proxima Nova, Atrament, Adobe Garamond, PT Sans, Century School, Republic;*/
    }
</style>
<br>
<br>


<h3 class="body">@Model.AffirmationText</h3>

<table class="table">
    <tr>
        <th> </th>
    </tr>
</table>

<div style="display: block">
    <a href="/Affirmation/UpdateAffirmationTxt/@Model.ID">Update this Affirmation Text</a>
</div>
<br>
<br>
<div style="display: block">
    @using (Html.BeginForm("DeleteAffirmation", "Affirmation", "Post"))
    {
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" onclick="return confirm('Are you sure? We won't be able to restore it.')" value="Delete Affirmation" />
    }
</div>


