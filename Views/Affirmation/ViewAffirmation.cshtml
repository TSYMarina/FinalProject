@model Affirmations

@{
    ViewBag.Title = "Update Affirmation";
    <link href='https://fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Archivo+Black&display=swap" rel="stylesheet">
}

<style>
    body {
        font: white;
        font-family: "Arial Rounded MT";
        background: url("/images/moon-1807743.jpg") no-repeat center center fixed;
        /*Stoic Script, Proxima Nova, Atrament, Adobe Garamond, PT Sans, Century School, Republic;*/

    }

</style>
<br>
<br>

<body>
    <h3 class="afftext logo-1">@Model.AffirmationText</h3>
    <br>
    <br>
    <br>
    <div style="display: block">
        <a href="/Affirmation/UpdateAffirmationTxt/@Model.ID">Update this Affirmation Text</a>
    </div>
    <br>
    <br>

    <br>
    <div style="display: block ">
        @using (Html.BeginForm("DeleteAffirmation", "Affirmation", "Post"))
        {
            <input type="hidden" asp-for="ID" value="@Model.ID" />
            <input style="padding:20px" type="submit" onclick="return confirm('Are you sure? We won't be able to restore it.')" value="Delete Affirmation" />
        }
    </div>
    <br>
    <br>
    <br>
    <br>
  
